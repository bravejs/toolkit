{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "sourceMap": false,
    "strict": true,
    "alwaysStrict": true,
    "moduleResolution": "Bundler",
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "packages/**/dist/**"
  ]
}